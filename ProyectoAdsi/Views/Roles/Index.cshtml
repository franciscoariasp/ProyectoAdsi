@model IEnumerable<ProyectoAdsi.Models.roles>

@{
    ViewBag.Title = "Index";
}

<h2>Roles</h2>

<p>
    @Html.ActionLink("Crer Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Descripcion
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkEliminar" }))
            </td>
        </tr>
    }

</table>


@section scripts{

    <script>
        $(".linkEliminar").click(function (event) {
            if(!confirm('¿Esta seguro de Eliminar?')) {
               event.preventDefault();
         }
      })
    </script>
}
