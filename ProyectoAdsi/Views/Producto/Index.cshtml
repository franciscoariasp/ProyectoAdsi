@model IEnumerable<ProyectoAdsi.Models.producto>

@{
    ViewBag.Title = "Index";
}

<h2>Todos Los Productos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Nombre 
        </th>
        <th>
            Precio Unitario
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Proveedor
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.percio_unitario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @ProyectoAdsi.Controllers.ProductoController.NombreProveedor(item.id_proveedor)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id },new {@class="linkEliminar" })
            </td>
        </tr>
    }

</table>

@section scripts{

    <script>
        $(".linkEliminar").click(function (event) {
            if(!confirm('¿Esta seguro de Eliminar?')) {
               event.preventDefault();
         }
      })
    </script>
}