@model IEnumerable<ProyectoAdsi.Models.producto_imagen>

@{
    ViewBag.Title = "Index";
}

<h2>Producto_Imagen</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_producto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.imagen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.id_producto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkEliminar" })
            </td>
        </tr>
    }

</table>


@section scripts{

    <script>
        $(".linkEliminar").click(function (event) {
            if(!confirm('¿Esta seguro de Eliminar?')) {
               event.preventDefault();
         }
      })
    </script>
}