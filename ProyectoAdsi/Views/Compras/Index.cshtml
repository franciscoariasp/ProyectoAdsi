@model IEnumerable<ProyectoAdsi.Models.compra>

@{
    ViewBag.Title = "Index";
}


  <h1 style=" color:lawngreen">Listado Compras</h1>

<p>
    @Html.ActionLink("Registrar Nueva ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Total
        </th>
        <th>
            Usuario
        </th>
        <th>
             Cliente
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                @ProyectoAdsi.Controllers.ComprasController.NombreUsuario(item.id_usuario)
            </td>
            <td>
                @ProyectoAdsi.Controllers.ComprasController.NombreCliente(item.id_cliente)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id },new { @class = "linkEliminar" })
            </td>
        </tr>
    }

</table>
@section scripts{

    <script>
        $(".linkEliminar").click(function (event) {
            if(!confirm('¿Esta seguro de Eliminar?')) {
               event.preventDefault();
         }
      })
    </script>
}