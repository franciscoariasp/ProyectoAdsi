@model IEnumerable<ProyectoAdsi.Models.producto_compra>

@{
    ViewBag.Title = "Index";
    

}

<h2>Listado Compras</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Compra
        </th>
        <th>
             Producto
        </th>
        <th>
            Cantidad

        </th>
       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @ProyectoAdsi.Controllers.Producto_CompraController.NombreCompra(item.id_compra)
            </td>
            <td>
                @ProyectoAdsi.Controllers.Producto_CompraController.NombreProducto(item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new {@class="linkEliminar" })
            </td>
        </tr>
    }

</table>

@section scripts{

    <script>
        $(".linkEliminar").click(function (event) {
            if(!confirm('¿Esta seguro de Eliminar?')) {
               event.preventDefault();
         }
      })
    </script>
}
